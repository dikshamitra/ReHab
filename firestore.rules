rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default to locked down
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and update their own profile data.
    // A user can only create their own document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // Chat messages can be created by any authenticated user.
    // Messages can only be read/written by the participants of the chat.
    // For this app, we assume anonymous one-on-one chats, so we'll check if the user created the chat doc.
    // A more robust implementation might store participant IDs in the chat document.
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    
    match /chats/{chatId}/messages/{messageId} {
       allow read, write: if request.auth != null;
    }

    // Forum posts can be read by any authenticated user.
    // Posts can only be created, updated, or deleted by the author.
    match /forum_posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }
    
    // Forum replies can be read by any authenticated user.
    // Replies can only be created by an authenticated user.
    // Replies can only be deleted by the author.
    match /forum_posts/{postId}/replies/{replyId} {
       allow read: if request.auth != null;
       allow create: if request.auth.uid == request.resource.data.authorId;
       allow delete: if request.auth.uid == resource.data.authorId;
    }
  }
}